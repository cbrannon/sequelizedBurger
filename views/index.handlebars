<h1 class="text-center">Eat-Dat-Burger!</h1>
<img src="./assets/images/burger-vector.jpg" alt="burger-image" class="src img-responsive center-block">

<div class="col-xs-12 col-md-4 col-md-push-4">
  <h2 class="text-center">Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <input type="text"  id="burgerInput" name="burger_name">
    </div>

    <button type="submit" class="btn btn-primary center-block">Submit</button>
  </form>
</div>

<div class="col-xs-12 col-md-4 col-md-pull-4 lists text-center">
  <div id="burgers">
    {{#each burgers}}
      {{#unless this.devoured}}
  
          <h3>{{this.burger_name}}</h3>

          <form action="/{{this.id}}?_method=PUT" method="POST"  id="devour">
            <button type="submit" class="btn btn-danger">Devour!</button>
          </form>

      {{/unless}}
    {{/each}}
  </div>
</div>


<div class="col-xs-12 col-md-4 lists text-center">
  <ul class="list-group">
    {{#each burgers}}
      {{#if this.devoured}}
        <li class="list-group-item">
          {{this.burger_name}}
      {{/if}}
    {{/each}}
  </ul>
</div>


